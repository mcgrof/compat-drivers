 				continue;
+#if (LINUX_VERSION_CODE >= KERNEL_VERSION(2,6,27))
 			netif_wake_subqueue(sdata->dev, queue);
+#elif (LINUX_VERSION_CODE >= KERNEL_VERSION(2,6,23))
